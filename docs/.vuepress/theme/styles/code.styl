@require './config'

.content
  code
    color lighten($textColor, 20%)
    padding 0.25rem 0.5rem
    margin 0
    font-size 0.85em
    background-color #f9f9f9
    border-radius 3px

.content
  pre, pre[class*="language-"]
    background-color $backgroundColor
    line-height 1.4
    border-radius 6px
    padding 1.25rem 1.5rem
    margin 0.85rem 0
    white-space pre-wrap
    word-break break-word
    overflow auto
    position relative
    code
      color $blackFont_7
      padding 0
      background-color transparent
      border-radius 0
    &:before
      position absolute
      top 0.8em
      right 1em
      font-size 0.75rem
      color rgba(255, 255, 255, 0.4)
  .highlighted-line
    background-color rgba(186,190,195,0.2)
    display block
    margin 0 -1.5rem
    padding 0 1.5rem

.token.selector, .token.important, .token.atrule, .token.keyword, .token.builtin
  color #af56b1
.token.punctuation
  color #aaa
.token.comment, .token.block-comment, .token.prolog, .token.doctype, .token.cdata
  color $blackFont_3
.token.string, .token.char, .token.attr-value, .token.regex, .token.variable
  color #379c37
.token.boolean, .token.number, .token.function
  color #ff7043
.token.property, .token.class-name, .token.constant, .token.symbol
  color #c73fca
.token.operator, .token.entity, .token.url
  color #37a2a1
.token.tag, .token.attr-name, .token.namespace, .token.deleted
  color $blackFont_7

pre[class="language-js"], pre[class="language-javascript"]
  &:before
    content "js"

pre[class="language-html"], pre[class="language-markup"]
  &:before
    content "html"

pre[class="language-markdown"], pre[class="language-md"]
  &:before
    content "md"

pre[class="language-vue"]:before
  content "vue"

pre[class="language-css"]:before
  content "css"

pre[class="language-sass"]:before
  content "sass"

pre[class="language-less"]:before
  content "less"

pre[class="language-scss"]:before
  content "scss"

pre[class="language-stylus"]:before
  content "stylus"

pre[class="language-json"]:before
  content "json"

pre[class="language-ruby"]:before
  content "rb"

pre[class="language-python"]:before
  content "py"

pre[class="language-go"]:before
  content "go"

pre[class="language-java"]:before
  content "java"

pre[class="language-c"]:before
  content "c"

pre[class="language-bash"]:before
  content "sh"
